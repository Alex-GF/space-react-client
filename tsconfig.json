{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["src/main/*"]
    }
  },
  "include": ["src/main/index.ts", "src/test/**/*.test.ts", "src/test/**/*.test.tsx"],
  "exclude": ["node_modules", "dist"]
}